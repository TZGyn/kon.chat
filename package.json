{
	"name": "kon.chat",
	"devDependencies": {
		"prettier": "^3.6.2",
		"turbo": "^2.5.8",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.4",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
